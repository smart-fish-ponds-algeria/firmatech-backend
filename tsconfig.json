{
  "compilerOptions": {
    "rootDirs": ["src"],
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
